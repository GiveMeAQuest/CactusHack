<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="4dp"
    android:layout_marginTop="8dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rounded_product_item">

        <ImageView
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:id="@+id/product_image_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@android:color/white"/>

        <ProgressBar
            android:layout_above="@id/product_image_view"
            android:id="@+id/preview_progress_bar"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/product_image_view"
            android:layout_height="wrap_content">

            <TextView
                android:textAlignment="center"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/product_name_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Preview Name Test"
                android:textStyle="bold"/>

            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_toRightOf="@id/product_name_view"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:id="@+id/product_price_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Preview Price Test: 100000$"
                android:textSize="25sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/product_count_view"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Ñ…5"/>

        <Button
            android:background="@drawable/rounded_login_button"
            android:id="@+id/delete_product_button"
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>